<main>
    {{#if error}}
    <div>
        <div class="errorContainer">
            <div>{{error}}</div>
        </div>
    </div>
    {{/if}}

    <section id="details-info">
        <h1>Details</h1>
        <div class="coin-image">
            <img src="{{element.image}}">
        </div>

        <div class="coin-info">
            <div class="coin-text">
                <h1 id="name">{{element.name}}</h1>
                <h3 id="payment">Payment method: {{element.paymentMethod}}</h3>
                <p id="price"><span>Price: ${{element.price}}</span></p>
                <p id="description">{{element.description}}</p>
            </div>
            <div class="product-btn">
                <!--Only for registered user and author of the publication -->
                <!-- <div class="author">
                        <a href="#" class="btn-edit">Edit</a>
                        <a href="#" class="btn-delete">Delete</a>
                    </div> -->

                <!-- Logged in user who has not yet buy this crypto-->
                <!-- <a href="#" class="btn-buy">Buy</a> -->

                <!-- Logged in user who has already buy this crypto-->



                {{#if isAuth}}
                <div class="product-btn">
                    {{#if isOwner}}
                    <div class="author">
                        <a href="/crypto/edit/{{element._id}}" class="btn-edit">Edit</a>
                        <a href="/crypto/delete/{{element._id}}" class="btn-delete">Delete</a>
                    </div>
                    {{else}}
                    {{#if rented}}
                    <p class="buy-message">You already bought these crypto coins.</p>
                    {{else}}
                    <a href="/crypto/buy/{{element._id}}" class="btn-buy">Buy</a>
                    {{/if}}
                    {{/if}}
                </div>
                {{/if}}



            </div>
        </div>
    </section>
</main>