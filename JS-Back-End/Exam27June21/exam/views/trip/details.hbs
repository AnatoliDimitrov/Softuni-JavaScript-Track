<main>
    <section class="py-5 details" id="trip-details-page">
        <div class="container">
            <div class="destination">
                <div>
                    <span class="icon"><i class="fas fa-map-marked-alt"></i></span>
                    <h5> from <span>{{element.start}}</span> to <span>{{element.end}}</span> </h5>
                </div>
                <div>
                    <span class="icon"><i class="fas fa-calendar-alt"></i></span>
                    <h5> <span>{{element.date}}</span> at <span>{{element.time}}</span> </h5>
                </div>
            </div>
            <p class="line"></p>
            <div class="buddies-info">
                <i class="fas fa-users buddies"></i>
                <h5>Shared trip Buddies</h5>
                <div>
                   {{#if element.rentedUsers}}
                        <p>{{element.rentedUsers}}</p>
                        {{else}}
                    <p>there are no buddies yet...</p>
                        {{/if}}
                </div>
                <h5>Driver: <span>{{user.email}}</span> </h5>
            </div>
            <p class="line"></p>
            <h5 class="brand">Car Brand: <span class="lead">{{element.carBrand}}</span></h5>
            <div class="trip-info">
                <div>
                    <img class="img-fluid rounded"
                        src="{{element.carImage}}"
                        alt="car-image">
                </div>
                <div class="trip-desc">
                    <h5>Information about the trip</h5>
                    <textarea class="lead"
                        disabled>{{element.description}}</textarea>
                    <h5>Price: <span class="lead">{{element.price}}</span> BGN</h5>

                    <!-- if there are no logged in user do not show div with class actions  -->


                    {{#if isAuth}}
                    <div class="product-btn">
                        {{#if isOwner}}
                        <a href="/trip/delete/{{element._id}}" class="btn btn-danger">Delete this trip</a>
                        <a href="/trip/edit/{{element._id}}" class="btn btn-warning">Edit this trip</a>
                        {{else}}
                        {{#if element.seats }}
                        {{#if rented}}
                        <span class="btn btn-info">Already joined. Don't be late!</span>
                        {{else}}
                        <a href="/trip/join/{{element._id}}" class="btn btn-join">Join now, [ {{element.seats}} ] seats left!</a>
                        {{/if}}
                        {{else}}
                        <span class="btn btn-secondary">No seats available! [0]</span>
                        {{/if}}
                        {{/if}}
                    </div>
                    {{/if}}


                    {{!-- <div class="actions">
                        <!-- Only for logged user and creator to this trip -->
